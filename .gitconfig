[merge]
    tool = vimdiff
    guitool = vimrdiff
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	page = less
[mergetool]
	prompt = true
    conflictstyle = diff3
	keepBackup = false
[mergetool "fugitive"]
    # Ancestor :1 :2 HEAD :3 merge
    cmd = nvim -f "$MERGED" -c 'Gread :1:% | set scrollbind diff' -c 'Gvsplit :2:% | set scrollbind diff | ALEDisableBuffer'  -c 'Gvsplit :3:% | set scrollbind diff | ALEDisableBuffer' -c 'wincmd w' -c '2wincmd l' 
[mergetool "vimdiff"]
	cmd = vim -f -d $LOCAL $REMOTE $BASE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nvimdiff"]
	cmd = nvim -f -d $LOCAL $REMOTE $BASE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "vimrdiff"]
    cmd = vimr --wait --nvim $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
[diff]
	tool = vimdiff
    guitool = vimrdiff
[difftool]
    prompt = false
    conflictstyle = diff3
[difftool "vimdiff"]
	cmd = vim -f -d $LOCAL $REMOTE $BASE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool "nvimdiff"]
	cmd = nvim -f -d $LOCAL $REMOTE $BASE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool "vimrdiff"]
    cmd = vimr --wait --neovim -f -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
[color]
	pager = yes
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
    deleted = log --diff-filter=D --summary
	sl = !git smartlog
	smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)<%H>%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)<%ae>%Creset%n%C(cyan)%s%n%Creset'
    local-branches = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
[push]
	default = matching
